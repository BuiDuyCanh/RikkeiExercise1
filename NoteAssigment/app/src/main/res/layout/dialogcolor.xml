<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Choose color"
            android:textColor="#54bdfa"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtline1"
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_margin="5dp"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <ImageButton
            android:id="@+id/imgbtn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:onClick="While"
            app:srcCompat="@android:color/background_light" />

        <ImageButton
            android:id="@+id/imgbtn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:onClick="Bluecolor"
            app:srcCompat="@android:color/holo_green_dark" />

        <ImageButton
            android:id="@+id/imgbtn3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:onClick="Redcolor"
            app:srcCompat="@android:color/holo_red_dark" />

        <ImageButton
            android:id="@+id/imgbtn4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:onClick="Oriangecolor"
            app:srcCompat="@color/colorPrimary" />


    </LinearLayout>


</LinearLayout>